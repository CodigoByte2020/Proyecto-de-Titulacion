<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="base_persona_view_search" model="ir.ui.view">
        <field name="name">base.persona.view.search</field>
        <field name="model">base.persona</field>
        <field name="arch" type="xml">
            <search string="Clientes">
                <field name="name"/>
                <field name="numero_documento"/>
            </search>
        </field>
    </record>

    <record id="persona_view_tree" model="ir.ui.view">
        <field name="name">persona.view.tree</field>
        <field name="model">base.persona</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="numero_documento"/>
                <field name="celular"/>
                <field name="direccion"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="persona_view_form" model="ir.ui.view">
        <field name="name">persona.view.form</field>
        <field name="model">base.persona</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="consult_data" string="Consultar datos" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="tipo_documento"/>
                            <field name="numero_documento"/>
                            <field name="name"/>
                            <field name="estado" attrs="{'invisible': [('tipo_documento', '!=', 'ruc')]}"/>
                            <field name="condicion" attrs="{'invisible': [('tipo_documento', '!=', 'ruc')]}"/>
                        </group>
                        <group>
                            <field name="direccion"/>
                            <field name="celular"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>