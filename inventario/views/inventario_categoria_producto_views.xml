<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="productos_categoria_producto_view_tree" model="ir.ui.view">
        <field name="name">productos.categoria.producto.view.tree</field>
        <field name="model">productos.categoria.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="productos_categoria_producto_view_form" model="ir.ui.view">
        <field name="name">productos.categoria.producto.view.form</field>
        <field name="model">productos.categoria.producto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="productos_categoria_producto_action" model="ir.actions.act_window">
        <field name="name">Categorias</field>
        <field name="res_model">productos.categoria.producto</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="productos_categoria_producto_menu"
              name="Categorias"
              action="productos_categoria_producto_action"
              sequence="20"
              parent="producto_menu"/>
</odoo>