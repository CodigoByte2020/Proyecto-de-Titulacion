<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="productos_producto_view_tree" model="ir.ui.view">
        <field name="name">productos.producto.view.tree</field>
        <field name="model">productos.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="categoria_id"/>
                <field name="precio"/>
                <field name="stock"/>
            </tree>
        </field>
    </record>

    <record id="productos_producto_view_form" model="ir.ui.view">
        <field name="name">productos.producto.view.form</field>
        <field name="model">productos.producto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="categoria_id"/>
                            <field name="precio"/>
                        </group>
                        <group>
                            <field name="stock"/>
                            <field name="comentarios"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="productos_producto_action" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">productos.producto</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="productos_producto_menu"
              name="Productos"
              action="productos_producto_action"
              sequence="10"
              parent="producto_menu"/>
</odoo>