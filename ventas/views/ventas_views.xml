<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ventas_view_tree" model="ir.ui.view">
        <field name="name">ventas.view.tree</field>
        <field name="model">ventas</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cliente_id"/>
                <field name="fecha"/>
                <field name="tipo_venta"/>
                <field name="total"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ventas_view_form" model="ir.ui.view">
        <field name="name">ventas.view.form</field>
        <field name="model">ventas</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_confirm" type="object" string="Confirmar" class="btn btn-primary"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="practicando" type="object" string="Practicando"/>
                    <button name="special_command1" type="object" string="(1, id, values)"/>
                    <button name="special_command2" type="object" string="(2, id, 0)"/>
                    <button name="special_command3" type="object" string="(3, id, 0)"/>
                    <button name="special_command4" type="object" string="(4, id, 0)"/>
                    <button name="special_command5" type="object" string="(5, 0, 0)"/>
                    <button name="special_command6" type="object" string="(6, 0, ids)"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,confirmed"/>
                </header>
                <sheet>
                    <button name="super_domain" type="object" string="Super Dominio"/>
                    <group>
                        <group>
                            <field name="cliente_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="user_id"/>
                            <field name="tipo_venta"/>
                        </group>
                        <group>
                            <field name="fecha"/>
                            <field name="comentario"/>
                            <field name="hobby_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="LÃ­neas de pedido">
                            <field name="detalle_ventas_ids" context="{'default_venta_id': id}">
                                <tree editable="bottom">
                                    <field name="venta_id" invisible="1"/>
                                    <field name="id"/>
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                    <field name="precio_venta"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer">
                        <field name="total" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ventas_action" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">ventas</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ventas_ventas_menu"
              name="Ventas"
              action="ventas_action"
              sequence="10"
              parent="ventas_menu"/>
</odoo>