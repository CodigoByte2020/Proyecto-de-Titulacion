<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ventas_credito_cliente_view_tree" model="ir.ui.view">
        <field name="name">ventas.credito.cliente.view.tree</field>
        <field name="model">ventas.credito.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cliente_id"/>
                <field name="limite_credito"/>
                <field name="deuda"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <record id="ventas_credito_cliente_view_form" model="ir.ui.view">
        <field name="name">ventas.credito.cliente.view.form</field>
        <field name="model">ventas.credito.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="cliente_id"/>
                            <field name="limite_credito"/>
                            <field name="deuda"/>
                        </group>
                        <group>
                            <field name="estado"/>
                            <field name="comentario"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pagos de crédito">
                            <field name="pago_credito_clientes_ids" context="{'default_credito_cliente_id': id}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="credito_cliente_id" invisible="1"/>
                                    <field name="monto"/>
                                    <field name="fecha_pago"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ventas_credito_cliente_action" model="ir.actions.act_window">
        <field name="name">Créditos</field>
        <field name="res_model">ventas.credito.cliente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ventas_credito_cliente_menu"
              name="Créditos"
              action="ventas_credito_cliente_action"
              sequence="10"
              parent="creditos_menu"/>
</odoo>