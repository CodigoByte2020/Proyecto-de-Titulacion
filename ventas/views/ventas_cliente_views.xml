<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ventas_cliente_view_tree" model="ir.ui.view">
        <field name="name">ventas.cliente.view.tree</field>
        <field name="model">ventas.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="celular"/>
                <field name="direccion"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="ventas_cliente_view_form" model="ir.ui.view">
        <field name="name">ventas.cliente.view.form</field>
        <field name="model">ventas.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tipo_documento"/>
                            <field name="numero_documento"/>
                            <field name="edad"/>
                        </group>
                        <group>
                            <field name="direccion"/>
                            <field name="celular"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ventas_cliente_action" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">ventas.cliente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ventas_cliente_menu"
              name="Clientes"
              action="ventas_cliente_action"
              sequence="10"
              parent="clientes_menu"/>
</odoo>