<odoo>
    <data>
        <template id="template_invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="header border border-1">
                            <div class="row">
                                <div class="col-2"/>
                                <div class="col-8">
<!--                                    <img src="formatos_alta/static/src/img/logo-alta.jpeg" style="max-width: 50%; margin-bottom: 14px;"/>-->
                                    <img src="ventas/static/src/img/logo2.jpg" style="max-width: 50%"/><br/>
                                    Celular: <span t-field="o.user_id.company_id.phone"/><br/>
                                    Direcci贸n: <span t-field="o.user_id.company_id.street"/><br/>
                                    <span>------------------------</span><br/>
                                    Atendido por: <span t-field="o.user_id.name"/>
                                </div>
                                <div class="col-2"/>
                            </div>
                        </div>
                        <div class="page border border-1">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr class="bg-primary text-warning">
                                        <th>PRODUCTO</th>
                                        <th>CANTIDAD</th>
                                        <th>PRECIO UNIT.</th>
                                        <th>SUBTOTAL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.detalle_ventas_ids" t-as="line">
                                        <tr>
                                            <td><span t-field="line.producto_id"/></td>
                                            <td><span t-field="line.cantidad"/></td>
                                            <td><span t-field="line.precio_venta"/></td>
                                            <td><span t-field="line.subtotal"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div class="footer border border-1">
                            <div class="row">
                                <div class="col-2"/>
                                <div class="col-8">
                                    <span t-field="o.name"/><br/>
                                    <span t-field="o.fecha"/>
                                </div>
                                <div class="col-2"/>
                            </div>
                        </div>
                    </t>
                    <p style="page-break-before: always;"/>
                </t>
            </t>
        </template>

        <!-- Ejemplo de c贸mo declarar una acci贸n de reporte actualizada -->
        <record id="invoice_report" model="ir.actions.report">
            <field name="name">Reporte - Factura</field>
            <field name="model">ventas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ventas.template_invoice_report</field>
            <field name="print_report_name">'Factura - %s' % object.name</field>
            <field name="binding_model_id" ref="model_ventas"/>
            <field name="paperformat_id" ref="paperformat_invoices"/>
        </record>


