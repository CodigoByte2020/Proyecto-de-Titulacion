<!--                                        <td>0.0</td>-->
<!--                                    </tr>-->
<!--                                    <tr>-->
<!--                                        <td>Total</td>-->
<!--                                        <td>0.0</td>-->
<!--                                    </tr>-->
<!--                                </tfoot>-->
                            </table>
                        </div>
                        <div class="footer">
                            <div class="row">
                                <div class="col-12 text-center" style="font-size: 8px;">
<!--                                    <span t-field="o.name"/><br/>-->
<!--                                    <span t-field="o.fecha"/>-->
                                    <span>Celular: <span t-field="o.user_id.company_id.phone"/><br/></span>
                                    <span>Dirección: <span t-field="o.user_id.company_id.street"/><br/></span>
                                </div>
                            </div>
                        </div>
                    </t>
<!--                    <p style="page-break-before: always;"/>-->
                </t>
            </t>
        </template>

        <!-- Ejemplo de cómo declarar una acción de reporte actualizada -->
        <record id="invoice_report" model="ir.actions.report">
            <field name="name">Reporte - Factura</field>
            <field name="model">ventas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ventas.template_invoice_report</field>
            <field name="print_report_name">'Factura - %s' % object.name</field>
            <field name="binding_model_id" ref="model_ventas"/>
            <field name="paperformat_id" ref="paperformat_invoices"/>
        </record>


