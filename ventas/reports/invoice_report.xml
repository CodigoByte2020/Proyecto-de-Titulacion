<odoo>
    <data>
        <template id="template_invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                <!-- CUANDO TRABAJAMOS CON ESTA ESTRUCTURA, NO SE PUEDE DECLARAR UN HEADER -->
                    <t t-call="web.basic_layout">
